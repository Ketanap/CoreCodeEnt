 @{ Layout = null; }
 @model  IEnumerable<CoreEnt.Models.tblContact>
 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 </head>
 <body>
    
 <div class="container">
        <a class="btn btn-primary" asp-area="" asp-controller="Contact" asp-action="Add">Add</a>
 <h1>Contact </h1>
    
    <table class="table">  
     <tr>  
         <th>Edit</th>
         <th>Name</th>  
         <th>Email</th>  
         <th>Contact</th>  
         <th>Address</th>  
         <th>Delete</th>
      </tr>  
   @foreach (var item in Model)  
   {  
       <tr>  
           <td> @Html.ActionLink("Edit",  "Add", "Contact", 
                   new 
                       { 
                           id = @item.ContactId 
                       }, 
                   new { 
                           @class = "btn btn-primary", 
                       }
                   )
           </td>
           <td>@item.Name </td>  
           <td>@item.Email</td>  
           <td>@item.Contact</td>  
           <td>@item.Address</td>  
           <td> @Html.ActionLink("Delete",  "Index", "Contact", 
                   new 
                       { 
                           id = @item.ContactId 
                       }, 
                   new { 
                           @class = "btn btn-danger", 
                       }
                   )
           </td>
      
        </tr>  
    }  
 </table>  
  </div>
</body>
 </html>   
 